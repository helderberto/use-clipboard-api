{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "outDir": "./dist",
    "sourceMap": true,
    "declarationDir": "./dist/types",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmit": false,
    "noImplicitAny": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/__tests__"]
}
